{
  "name": "tech-blog",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18",
    "npm": "8.1.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier -w ./",
    "format:check": "prettier --check ./",
    "lint": "npx next lint -- --dir ./src",
    "typecheck": "tsc",
    "test": "jest --env=jsdom --no-cache --onlyChanged",
    "test:all": "jest --env=jsdom --no-cache",
    "postbuild": "next-sitemap",
    "spellcheck": "cspell **/*.{ts,js,tsx,json,md,mdx} -e node_modules -e pnpm-lock.yaml -e .next/"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^2.1.1",
    "@tailwindcss/typography": "^0.5.8",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "body-scroll-lock": "^4.0.0-beta.0",
    "clsx": "^1.2.1",
    "dayjs": "^1.11.6",
    "eslint": "8.27.0",
    "eslint-config-next": "13.0.4",
    "next": "13.1.1",
    "next-mdx-remote": "^4.2.0",
    "next-sitemap": "^3.1.32",
    "node-html-parser": "^6.1.4",
    "posthog-js": "^1.37.0",
    "prism-react-renderer": "^1.3.5",
    "prismjs": "^1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.39.4",
    "react-scroll": "^1.8.8",
    "react-toastify": "^9.1.1",
    "rehype-document": "^6.1.0",
    "rehype-katex": "^6.0.2",
    "remark-math": "^5.1.1",
    "typescript": "4.9.3",
    "usehooks-ts": "^2.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@testing-library/react": "^13.4.0",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/jest": "^29.2.4",
    "@types/react-scroll": "^1.8.5",
    "autoprefixer": "^10.4.13",
    "babel-jest": "^29.3.1",
    "cspell": "^6.17.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.4.19",
    "postcss-nesting": "^10.2.0",
    "prettier": "^2.8.1",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "jest.tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/config/style-mock.js",
      "^[./a-zA-Z0-9$_-]+\\.(jpg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/config/file-stub.js"
    },
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      ".*": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
